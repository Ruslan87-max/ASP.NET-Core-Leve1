@if (User.Identity.IsAuthenticated)
{
    <span>Здравствуйте <a asp-action="Index" asp-controller="Profile">@User.Identity.Name</a></span>
    <form mnethod="post" asp-controller="Account" asp-action="Logout" asp-antiforgery="true">
        <input type="submit" value="Выход" class="btn btn-default" />
    </form>
}
else
{
    <div class="btn-group pull-right">
        <a asp-controller="Account" asp-action="Login" class="btn btn-default">Войти</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-default">Регистрация</a>
    </div>
}