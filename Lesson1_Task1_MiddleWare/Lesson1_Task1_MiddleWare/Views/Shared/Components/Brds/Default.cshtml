@model IEnumerable<Lesson1_Task1_MiddleWare.Models.BrandViewModel>

<div class="brands_products">
    <!--brands_products-->
    <h2>Брэнды</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model)
            {
                <li><a asp-controller="Catalog" asp-action="Shop" asp-route-BrandId="@brand.Id"> <span class="pull-right">(@brand.Count)</span>@brand.Name</a></li>
            }
        </ul>
    </div>
</div><!--/brands_products-->