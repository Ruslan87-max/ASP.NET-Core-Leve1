@model Lesson1_Task1_MiddleWare.Models.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Войдите в Ваш аккаунт</h2>
                    <form method="post" asp-action="Login" asp-antiforgery="true">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <input asp-for="UserName" type="text" placeholder="@Html.DisplayNameFor(model => model.UserName)" />
                            <input asp-for="Password" type="password" placeholder="@Html.DisplayNameFor(model => model.Password)" />
                            <span>
                                <input asp-for="RememberMe" type="checkbox" />Запомнить меня
                            </span>
                            <button type="submit" class="btn btn-default">Войти</button>
                    </form>
                </div><!--/login form-->
            </div>
            
        </div>
    </div>
</section><!--/form-->
